<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LibraryApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LibraryApp.styles.css" asp-append-version="true" />
   
</head>
<body style="background-color:#F5EFE7">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-toggleable-sm mb-3" style="background-color: #181D31;">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">LibraryApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                         <li>
                           <div class="dropdown">
                                <button style="margin:5px"  class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Adding
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a asp-controller="Writer" asp-action="Create" class="dropdown-item">Add Writer</a></li>
                                    <li><a asp-controller="Book" asp-action="Create" class="dropdown-item">Add Book</a></li>
                                    <li><a asp-controller="Category" asp-action="Create" class="dropdown-item">Add Category</a></li>
                                    <li><a asp-controller="MyClass" asp-action="Create" class="dropdown-item">Add Class</a></li>
                                    <li><a asp-controller="Student" asp-action="Create" class="dropdown-item">Add Student</a></li>

                                </ul>
                            </div>
                        </li>
                        
                        <li>
                           <div class="dropdown">
                                <button style="margin:5px" class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                     Listing
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a asp-controller="Writer" asp-action="Index" class="dropdown-item">List Of Writer</a></li>
                                    <li><a asp-controller="Book" asp-action="Index" class="dropdown-item">List Of Book</a></li>
                                    <li><a asp-controller="Category" asp-action="Index" class="dropdown-item">List Of Category</a></li>
                                    <li><a asp-controller="MyClass" asp-action="Index" class="dropdown-item">List Of Class</a></li>
                                    <li><a asp-controller="Student" asp-action="Index" class="dropdown-item">List Of Student</a></li>

                                </ul>
                            </div>
                        </li>
                        <li>
                           <div class="dropdown">
                                <button style="margin:5px" class="btn btn-warning dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Processes
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a asp-controller="Process" asp-action="Create" class="dropdown-item">Assign Book to Student</a></li>
                                    <li><a asp-controller="Process" asp-action="Index" class="dropdown-item">List Of Assign Book to Student</a></li>
                                   

                                </ul>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">

            @RenderBody()
            <img class="mainphoto"  src="~/images/pexels-skitterphoto-442420.jpg" />
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - LibraryApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Designed by Bilal_Arslan</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


