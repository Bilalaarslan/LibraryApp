@model LibraryApp.Entity.Student

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StudentName" class="control-label"></label>
                <input asp-for="StudentName" class="form-control" />
                <span asp-validation-for="StudentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentSurname" class="control-label"></label>
                <input asp-for="StudentSurname" class="form-control" />
                <span asp-validation-for="StudentSurname" class="text-danger"></span>
            </div>
            <div class="form-check">
                <input type="radio" asp-for="Gender" value="Man" class="form-check-input" />
                <label asp-for="Gender" class="form-check-label">Man</label>
            </div>
            <div class="form-check">
                <input type="radio" asp-for="Gender" value="Woman" class="form-check-input" />
                <label asp-for="Gender" class="form-check-label">Woman</label>
            </div>
            <div class="form-group">
                <label asp-for="DateOfBirthStudent" class="control-label"></label>
                <input asp-for="DateOfBirthStudent" class="form-control" />
                <span asp-validation-for="DateOfBirthStudent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MyClassId" class="control-label"></label>
                <select asp-for="MyClassId" class="form-select" asp-items="ViewBag.classes" ></select>
                <span asp-validation-for="MyClassId" class="text-danger"></span>
            </div>
           
        
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
